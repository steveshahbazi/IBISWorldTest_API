@model TermDTO

<form asp-action="DeleteTerm">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Term</h1>
        <br />

        <input hidden asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Definition" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Definition" disabled class="form-control"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexGlossary" asp-controller="Glossary" class="btn-primary btn form-control">Back to Glossary</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}